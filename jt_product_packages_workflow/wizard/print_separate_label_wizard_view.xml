<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="print_separate_label_wizard_view_form" model="ir.ui.view">
            <field name="name">print.separate.label.wizard.view.form</field>
            <field name="model">print.separate.label.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="state" invisible="1"/>
                    <group states="choose">
                        <group attrs="{'invisible': [('report1', '!=', False)]}">
                            <field name="start_range"/>
                            <field name="end_range"/>
                            <button class="oe_highlight" width="150px" string="Add To List" type="object" name="add_labels_to_list" attrs="{'invisible': [('report1', '!=', False)]}" style="margin-top: 0px;"/><br/>
                            <button class="oe_highlight" width="150px" string="Clear List" type="object" name="clear_list" attrs="{'invisible': ['|', ('labels', '=', []) , ('report1', '!=', False)]}" style="margin-top: 10px;"/>
                        </group>
                    </group>
                    <group states="choose">
                        <field name="labels" widget="many2many_tags" string="Labels" attrs="{'invisible': [('report1', '!=', False)]}"/>
                        <button class="oe_highlight" width="150px" string="Preview Labels" type="object" name="get_report" attrs="{'invisible': [('report1', '!=', False)]}"/><br/>
                    </group>
                    <field name="report1" filename="name" nolabel="1" widget="pdf_viewer" attrs="{'invisible': ['|', ('report1', '=', False), ('state', '=', 'get')]}"/>
                    <div states="get">
                        <group>
                            <field name="name" colspan="4" invisible="1"/>
                            <field name="report" filename="name" colspan="4"/>
                        </group>
                    </div>
                    <footer>
                        <button name="print_report" string="Print Labels"
                            type="object" class="oe_highlight" states="choose"/>
                        <span states="choose"> Or </span>
                        <button string="Cancel" class="oe_link btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_print_separate_label">
            <field name="name">Print Separately</field>
            <field name="res_model">print.separate.label.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>